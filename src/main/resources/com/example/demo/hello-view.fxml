<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="399.0" prefWidth="629.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <children>
        <MenuBar>
            <VBox.margin>
                <Insets bottom="5.0" left="20.0" right="20.0" top="15.0" />
            </VBox.margin>
            <menus>
                <Menu mnemonicParsing="false" text="Soubor">
               <items>
                  <MenuItem fx:id="vypnout" mnemonicParsing="false" onAction="#onVypnoutButtonClick" text="vypnout" />
               </items></Menu>
                <Menu mnemonicParsing="false" text="O aplikaci">
                    <items>
                        <MenuItem mnemonicParsing="false" text="O aplikaci" />
                        <MenuItem mnemonicParsing="false" text="Napoveda" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox prefHeight="0.0" prefWidth="614.0">
            <children>
                <TextField fx:id="nameField" promptText="Name">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <TextField fx:id="nicknameField" promptText="Nickname">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <TextField fx:id="phoneField" promptText="Phone">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="addContactButton" mnemonicParsing="false" onAction="#onAddContactButtonClick" prefHeight="25.0" prefWidth="113.0" text="Add Contact">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </HBox>
        <ListView fx:id="listViewUsers" prefHeight="328.0" prefWidth="589.0">
            <VBox.margin>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </VBox.margin>
        </ListView>
        <HBox prefHeight="18.0" prefWidth="589.0">
            <children>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Delete">
                    <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#onUpdateButtonClick" text="Update">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="20.0" right="20.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
